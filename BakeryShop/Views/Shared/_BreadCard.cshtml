@model Bread

<div class="row">
    <div class="col-sm-4">
        <div class="card" style="width: 20rem;">
            <img src="~/Images/bread-removebg-preview.png" class="card-img-top img-fluid img-thumbnail" alt="" style="width:100%;height:250px;" /> <!--style="width:100%;height:300px;"-->
            <!--class="card-img-top" src="~/Images/bread.jpg" alt="">-->
            <div class="card-body">
                <h3 class="pull-right">
                    @Model.Price.ToString("c")
                </h3>
                <h3>
                    <a asp-controller="Bread" asp-action="Details" asp-route-id="@Model.BreadId">@Model.Name</a>
                </h3>
                <p class="card-text">@Model.Description</p>
                <div class="addToCart">
                    <p class="button">
                        <a class="btn btn-primary"
                           asp-route-id="@Model.BreadId">Add to cart</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

